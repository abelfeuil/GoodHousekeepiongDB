<controls:MetroWindow x:Class="GoodHousekeeping.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Login" Height="275" Width="300">
    <Grid>
        <StackPanel>
            <Label Margin="10">Username:</Label>
            <TextBox Margin="10" Background="#FFB8B8B8" x:Name="Username"></TextBox>
            <Label Margin="10">Password:</Label>
            <PasswordBox Background="#FFB8B8B8" x:Name="Password" Margin="10"></PasswordBox>
            <Button Click="OnLogin" Margin="10" IsDefault="True">Login</Button>
        </StackPanel>

    </Grid>
</controls:MetroWindow>
